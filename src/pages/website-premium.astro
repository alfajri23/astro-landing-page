---
import { FeaturesSectionWithHoverEffects } from "@/components/feature-section-with-hover-effects";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { ImageComparison } from "@/components/ui/image-comparison";
import { PricingCard } from "@/components/pricing-card";
import Layout from "@/layouts/Layout.astro";
import { Eye, MoveRight, PhoneCall, TrendingUp } from "lucide-react";


---

<Layout>
    <ImageComparison client:load/>

    <div class="w-full py-20 lg:py-40" id="feature">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 gap-8 items-center md:grid-cols-2">
            <div class="flex gap-4 flex-col">
              <div>
                <Badge variant="outline">Kita disini</Badge>
              </div>
              <div class="flex gap-4 flex-col">
                <h1 class="text-3xl md:text-5xl max-w-lg tracking-tighter text-left font-regular">
                  Karena semua website terlihat sama
                </h1>
                <p class="text-md md:text-lg text-muted-foreground max-w-md text-left">
                    Miliki website yang berbeda dari website lain, tarik banyak audient dengan konten dan tampilan yang elegan dan kekinian
                </p>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-stone-300 rounded-md aspect-square"></div>
              <div class="bg-sky-600 rounded-md row-span-2 p-6">
                <div class="flex flex-col justify-between h-full">
                    <p class="text-2xl font-medium text-sky-100">Jadilah yang berbeda dan dapatkan banyak pengunjung</p>
                    <TrendingUp className="text-white w-30 h-30"/>
                </div>
              </div>
              <div class="bg-amber-500 rounded-md aspect-square p-6">
                <div class="flex flex-col justify-between h-full">
                    <p class="text-2xl font-medium text-sky-100">Karena Visual itu penting</p>
                    <Eye className="text-white w-20 h-20"/>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>

    <div>
        <div class="flex flex-col gap-2">
            <h3 class="text-2xl md:text-3xl max-w-lg tracking-tighter font-default">Siapa saja yang butuh</h3>
            <p class="text-muted-foreground">Semua jenis bidang dan cocok untuk membuat website premium, mulai dari instansi, bisnis sampai personal</p>
        </div>
        <FeaturesSectionWithHoverEffects />
    </div>

    <PricingCard
        client:load
      title="Buat Sekarang"
      description="Dapatkan harga spesial"
      price="2.5Jt"
      originalPrice="4.5Jt"
      features={[
        {
          title: "Keunggulan",
          items: [
            "Desain Responsif dan Modern",
            "Optimasi SEO",
            "Mudah Dikelola",
            "Keamanan Terjamin",
          ],
        },
        {
          title: "Kenapa memilih kami",
          items: [
            "24/7 Support",
            "Free konsultasi",
            "Harga yang Fleksibel",
            "Pembuatan yang Transparan",
          ],
        },
      ]}
      buttonText="Hubungi Kami"
      onButtonClick={() => console.log("Button clicked")}
    />


</Layout>



